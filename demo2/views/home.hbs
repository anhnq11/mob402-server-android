<div class="container">
    <div class="row my-2">
        <div class="col">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"
                data-bs-whatever="@mdo">Thêm ghi chú</button>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Thêm ghi chú mới</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="/">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="tieude" placeholder="FullName" name="tieude"
                                    required>
                                <label for="fullname">Tiêu đề</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="noidung" placeholder="UserName"
                                    name="noidung" required>
                                <label for="username">Nội dung</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="img" name="img" placeholder="Password">
                                <label for="password" required>Ảnh</label>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" name="status" type="checkbox" value="Checked"
                                    id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Trạng thái
                                </label>
                            </div>

                            <div class="modal-footer mt-3">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Thêm</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col justify-content-between">
            <form class="d-flex" role="search" method="get" action="/">
                <input class="form-control me-2" type="search" name="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </div>
    <div>
        <h3 class="fw-semibold">Danh sách ghi chú</h3>
        <table class="table caption-top table-bordered">
            <thead class="table-dark">
                <tr>
                    <th class="text-center align-middle" scope="col">#</th>
                    <th class="text-center align-middle" scope="col">Tiêu đề</th>
                    <th class="text-center align-middle" scope="col">Nội dung</th>
                    <th class="text-center align-middle" scope="col">Trạng thái</th>
                    <th class="text-center align-middle" scope="col">Ảnh</th>
                    <th class="text-center align-middle" scope="col">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                {{#each list}}
                <tr>
                    <th class="text-center align-middle" scope="row">{{sum @index 1}}</th>
                    <td class="text-center align-middle">{{tieude}}</td>
                    <td class="text-center align-middle">{{noidung}}</td>
                    <td class="text-center align-middle">
                        {{#if status}}
                        <p>hiiiiii</p>
                        <input class="form-check-input" name="status" type="checkbox" value="Checked" readonly checked >
                        {{else}}
                        <input class="form-check-input" name="status" type="checkbox" value="Checked" readonly >
                        {{/if}}
                    </td>
                    <td class="text-center align-middle"><img src="{{img}}" alt="Avatar"
                            class="rounded mx-auto d-block img-fluid" width="100" height="100"></td>
                    <td class="text-center align-middle">
                        <a href="/edit/{{this._id}}" class="btn btn-primary btn-sm">Sửa</a>
                        <a href="/delete/{{this._id}}" onclick="return confirm('Are you sure?')"
                            class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
                {{else}}
                <h6>Không có ghi chú để hiển thị</h6>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>