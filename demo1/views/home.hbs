<div class="container">
    <div class="row my-2">
        <div class="col">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"
                data-bs-whatever="@mdo">Thêm nhân viên</button>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Thêm nhân viên mới</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="/">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="manv" placeholder="FullName" name="manv"
                                    required>
                                <label for="fullname">Mã nhân viên</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="tennv" placeholder="UserName" name="tennv"
                                    required>
                                <label for="username">Tên nhân viên</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="number" class="form-control" id="diemtb" name="diemtb"
                                    placeholder="name@example.com">
                                <label for="email" required>Điểm trung bình</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="img" name="img" placeholder="Password">
                                <label for="password" required>Image</label>
                            </div>
                            <div class="modal-footer mt-3">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Thêm</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col justify-content-between">
            <form class="d-flex" role="search" method="get" action="/">
                <input class="form-control me-2" type="search" name="search" placeholder="Search"
                    aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </div>
    <div>
        <h3 class="fw-semibold">Danh sách nhân viên</h3>
        <table class="table caption-top table-bordered">
            <thead class="table-dark">
                <tr>
                    <th class="text-center align-middle" scope="col">#</th>
                    <th class="text-center align-middle" scope="col">Mã NV</th>
                    <th class="text-center align-middle" scope="col">Avatar</th>
                    <th class="text-center align-middle" scope="col">Họ và tên</th>
                    <th class="text-center align-middle" scope="col">Điểm</th>
                    <th class="text-center align-middle" scope="col">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                {{#each listNV}}
                <tr>
                    <th class="text-center align-middle" scope="row">{{sum @index 1}}</th>
                    <td class="text-center align-middle"><a href="/detail/{{this._id}}">{{this.manv}}</a></td>
                    <td class="text-center align-middle"><img src="{{img}}" alt="Avatar"
                            class="rounded mx-auto d-block img-fluid" width="100" height="100"></td>
                    <td class="text-center align-middle">{{tennv}}</td>
                    <td class="text-center align-middle">{{diemtb}}</td>
                    <td class="text-center align-middle">
                        <a href="/edit/{{this._id}}" class="btn btn-primary btn-sm">Sửa</a>
                        <a href="/delete/{{this._id}}" onclick="return confirm('Are you sure?')"
                            class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
                {{else}}
                <h6>Không có nhân viên để hiển thị</h6>
                {{/each}}
            </tbody>
        </table>
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>